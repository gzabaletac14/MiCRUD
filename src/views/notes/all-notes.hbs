<div class="row">
   {{#each notes}} 
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                 <h4 class="card-title d-flex justify-content-between align-items-center">
                     <!-- redirecionamos con el id para editar la nota -->
                    {{title}} <a  href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>                       
                </h4>
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">   
                    <button class="btn btn-danger btn-block btn-sm" type="submit">Eliminar</button>
                </form>               
            </div>
        </div>
    </div>
    {{else}}
    <div class="col-md-3 d-flex justify-content-between align-items-center">
        <div class="card">
            <div class="card-body ">
                <p class="Lead">No existen notas.</p>
                <a href="/notes/add" class="btn btn-success btn-block">Nueva Nota</a>
            </div>
        </div>
    </div>
   {{/each}}
</div>